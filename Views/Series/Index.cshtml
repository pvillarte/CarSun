@model Paginador<Serie>

@{
    ViewData["Title"] = "Series - Listado";
    var actualidad = "Actualidad";
}

<h2 class="text-center">Listado de series</h2>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="col-md-2 text-center">
                <a class="btn btn-sm btn-outline-dark" asp-action="Create">Crear</a>
            </th>
            <th>
                @Html.DisplayName("Nombre")
            </th>
            <th>
                @Html.DisplayName("Marca")
            </th>
            <th>
                @Html.DisplayName("Generaciones")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Resultado)
        {
            <tr>
                <td class="text-center">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca.Nombre)
                </td>
                <td>
                    <ul class="list-group-numbered list-unstyled">
                    @foreach(var subitem in item.Generaciones.OrderBy(g => g.Iteracion))
                    {
                        <li class="list-group-item">@subitem.Nombre |
                                <span class="text-muted">@subitem.FechaInicio.Date.ToShortDateString() - </span>
                                <span class="text-muted">
                            @if (subitem.FechaFin.HasValue)
                            {
                                @subitem.FechaFin.Value.Date.ToShortDateString()
                            }
                            else
                            {
                                @actualidad
                            }
                            </span>
                        </li>
                    }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Paginador" />
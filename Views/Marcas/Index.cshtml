@model IEnumerable<CarSun.Models.Marca>

@{
    ViewData["Title"] = "Marcas - Listado";
}

<h2 class="text-center">Listado de marcas</h2>
<hr />
<p>

</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="col-md-2 text-center">
                <a class="btn btn-outline-dark" asp-action="Create">Crear</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-center">
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
        </tr>
}
    </tbody>
</table>

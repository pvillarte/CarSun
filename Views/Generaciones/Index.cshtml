@model Paginador<Generacion>

@{
    ViewData["Title"] = "Generaciones - Listado";
}
<script>
    $(document).ready(func(){
        $("#marcaId").change(func(){
            $("serieId").val(-1);
        });
    });
</script>
<h2 class="text-center">Listado de generaciones</h2>
<hr />
<form method="get">
    <div class="form-group row">
        <div class="col-6 col-md-2 m-3">
            <label class="form-label-sm">Marca</label>
            <select id="marcaId" name="marcaId" class="form-select-sm" asp-items="ViewBag.MarcaId"
                    onchange="this.form.submit()"></select>
        </div>
        <div class="col-6 col-md-2 m-3">
            <label class="form-label-sm">Serie</label>
            <select id="serieId" name="serieId" class="form-select-sm" asp-items="ViewBag.SerieId"
                    onchange="this.form.submit()"></select>
        </div>
    </div>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="col-md-2 text-center">
                <a class="btn btn-sm btn-outline-dark" asp-action="Create">Crear</a>
            </th>
            <th>
                Iteración
            </th>
            <th>
                Nombre
            </th>
            <th>
                Fecha inicio
            </th>
            <th>
                Fecha fin
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Resultado)
        {
            <tr>
                <td class="text-center">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Iteracion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFin)
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Paginador" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

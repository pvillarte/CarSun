@using Microsoft.AspNetCore.Identity;
@model IdentityUser

@{
    ViewData["Title"] = "Usuarios - Editar";
}

<div class="card">
    <div class="card-header">
        <h3>Editar usuario</h3>
    </div>
    <form asp-action="Edit">
        <div class="card-body">
            <div class="row row-cols-md-3 row-cols-1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input disabled asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Teléfono</label>
                    <input disabled asp-for="PhoneNumber" class="form-control" />
                </div>
                <div>
                    <label class="control-label">Rol del usuario</label>
                    <select id="rolId" name="rolId" class="form-control" asp-items="ViewBag.Roles"></select>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row row-cols-auto">
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
                <div>
                    <a class="btn btn-secondary" asp-action="Index">Volver al listado</a>
                </div>
                <div>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Borrar</a>
                </div>
            </div>
        </div>
    </form>
</div>

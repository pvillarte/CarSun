@using Microsoft.AspNetCore.Identity;
@model Paginador<IdentityUser>

@{
    ViewData["Title"] = "Usuarios - Listado";
}

<h2 class="text-center">Listado de usuarios</h2>
<hr />
<p>

</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="col-md-2 text-center">
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Teléfono")
            </th>
            <th>
                @Html.DisplayName("Autenticación 2FA")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Resultado)
        {
            <tr>
                <td class="text-center">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TwoFactorEnabled)
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Paginador" />
@using Microsoft.AspNetCore.Identity;
@model IdentityUser

@{
    ViewData["Title"] = "Usuario - Borrar";
}

<h2 class="text-center">¿Seguro que quieres borrar el usuario <strong>@Model.UserName</strong>?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Teléfono")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-success" asp-action="Index">Volver al listado</a>
    </form>
</div>
